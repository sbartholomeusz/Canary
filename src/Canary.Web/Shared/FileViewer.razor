@using Canary.Web.Services;
@using System.IO;

<div class="p-3 border bg-light">Bank File Records</div>

<div class="list-group">
    @if (FileContents != null)
    {
        @foreach (var rec in FileContents)
        {
            @if (rec.LineNumber == LineNumberToHighlight)
            {
                <a href="#" class="list-group-item list-group-item-action active">@rec.Contents</a>
            }
            else
            {
                <a href="#" class="list-group-item list-group-item-action">@rec.Contents</a>
            }
        }
    }
</div>

@code {

    // Parameters
    [Parameter]
    public List<FileRecord> FileContents { get; set; }

    [Parameter]
    public int LineNumberToHighlight { get; set; }


    // Methods
    protected override void OnInitialized()
    {
        base.OnInitialized();
        FileContents = new List<FileRecord>();
    }
}
